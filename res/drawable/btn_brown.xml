<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#663333" />
            <stroke
                android:width="1dp"
                android:color="#996600" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#996666"
                android:endColor="#996600"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#996600" />
            <corners
                android:radius="4dp" />

        </shape>
    </item>
</selector>