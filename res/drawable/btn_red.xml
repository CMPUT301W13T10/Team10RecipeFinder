<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#CC3333" />
            <stroke
                android:width="1dp"
                android:color="#FF3366" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FF3399"
                android:endColor="#FF3366"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#FF3366" />
            <corners
                android:radius="4dp" />

        </shape>
    </item>
</selector>